{
  "name": "social-content-creator",
  "version": "0.1.0",
  "description": "基于AI的社交内容创作平台",
  "main": "src/backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/backend/server.js",
    "dev:frontend": "cd src/frontend && npm run dev",
    "start": "node src/backend/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "db-migrate up",
    "db:rollback": "db-migrate down",
    "db:init": "psql -U postgres -d social_content_creator -f db/init.sql"
  },
  "keywords": [
    "ai",
    "content-creator",
    "xiaohongshu",
    "crawler",
    "social-media"
  ],
  "author": "智宝 <zhibao@ai.assistant>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "@elastic/elasticsearch": "^8.11.0",
    "bull": "^4.12.0",
    "axios": "^1.6.5",
    "playwright": "^1.40.1",
    "cheerio": "^1.0.0-rc.12",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "openai": "^4.20.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
