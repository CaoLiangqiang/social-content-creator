# 环境变量配置
# 复制此文件为 .env 并填入实际值

# ============================================
# 应用配置
# ============================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# ============================================
# 数据库配置
# ============================================
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=social_content_creator
DB_USER=postgres
DB_PASSWORD=your_password_here

# MongoDB
MONGODB_URI=mongodb://localhost:27017/social_content_creator

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch
ES_NODE=http://localhost:9200
ES_USERNAME=
ES_PASSWORD=

# ============================================
# AI服务配置
# ============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# 阿里云通义千问（备用）
QWEN_API_KEY=
QWEN_MODEL=qwen-max

# ============================================
# JWT配置
# ============================================
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# 爬虫配置
# ============================================
# User-Agent
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 代理配置（可选）
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# 速率限制（每秒请求数）
CRAWLER_RATE_LIMIT_DEFAULT=10
CRAWLER_RATE_LIMIT_XIAOHONGSHU=5
CRAWLER_RATE_LIMIT_BILIBILI=10

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30d

# ============================================
# 文件存储配置
# ============================================
# MinIO (S3兼容)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=social-content-creator
MINIO_USE_SSL=false

# ============================================
# 邮件服务（可选）
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=社交内容创作平台
SMTP_FROM_EMAIL=noreply@example.com

# ============================================
# 第三方服务
# ============================================
# 钉钉机器人（可选）
DINGTALK_WEBHOOK=
DINGTALK_SECRET=

# 飞书应用（可选）
FEISHU_APP_ID=
FEISHU_APP_SECRET=
FEISHU_ENCRYPT_KEY=

# ============================================
# 开发配置
# ============================================
DEBUG=true
SWAGGER_ENABLED=true
CORS_ORIGIN=http://localhost:5173
